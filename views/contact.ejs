  <script>
    // Create floating particles
    function createParticles() {
      const particlesContainer = document.getElementById('particles');
      const particleCount = window.innerWidth < 768 ? 20 : 40;
      
      for (let i = 0; i < particleCount; i++) {
        const particle = document.createElement('div');
        particle.classList.add('particle');
        
        // Random size between 5px and 15px
        const size = Math.random() * 10 + 5;
        particle.style.width = `${size}px`;
        particle.style.height = `${size}px`;
        
        // Random position
        particle.style.left = `${Math.random() * 100}vw`;
        particle.style.bottom = `-${size}px`;
        
        // Random animation duration between 10s and 30s
        const duration = Math.random() * 20 + 10;
        particle.style.animationDuration = `${duration}s`;
        
        // Random delay
        particle.style.animationDelay = `${Math.random() * 10}s`;
        
        particlesContainer.appendChild(particle);
      }
    }

    // Floating button click handler
    document.getElementById('contactBtn').addEventListener('click', function() {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });

    // Animate contact items on scroll
    function animateOnScroll() {
      const contactItems = document.querySelectorAll('.info-item');
      const teamCards = document.querySelectorAll('.member-card');
      
      contactItems.forEach((item, index) => {
        setTimeout(() => {
          item.style.opacity = '1';
          item.style.transform = 'translateX(0)';
        }, index * 200);
      });
      
      teamCards.forEach((card, index) => {
        setTimeout(() => {
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, index * 200 + 600);
      });
    }

    // Initialize animations
    window.addEventListener('load', function() {
      createParticles();
      
      // Set initial states for animation
      document.querySelectorAll('.info-item').forEach(item => {
        item.style.opacity = '0';
        item.style.transform = 'translateX(-50px)';
        item.style.transition = 'all 0.6s ease-out';
      });
      
      document.querySelectorAll('.member-card').forEach(card => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(50px)';
        card.style.transition = 'all 0.6s ease-out';
      });
      
      // Trigger animations
      setTimeout(animateOnScroll, 300);
    });

    // Parallax effect for container
    window.addEventListener('scroll', function() {
      const container = document.querySelector('.container');
      const scrollPosition = window.pageYOffset;
      container.style.transform = `translateY(${scrollPosition * 0.1}px)`;
    });
  </script>
