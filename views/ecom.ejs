            },
            {
                id: 8,
                name: "Organic Millets",
                price: 100,
                image: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQZEAfN5YCxFgLiKpx94vO4hvaBKALO26qLVg&s",
                description: "Nutrient-dense millets including foxtail, little and kodo varieties."
            },
            {
                id: 9,
                name: "Organic Coconut Oil",
                price: 250,
                image: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR59oUamvWp0245CqvaYNnRcT7H0bYBERefjA&s",
                description: "Virgin coconut oil extracted without heat for maximum benefits."
            },
            {
                id: 10,
                name: "Organic Toor Dal",
                price: 130,
                image: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQRb1FMCaT6bnvcXB2hNF1uvbRnD7g4UfPgKg&s",
                description: "Split pigeon peas, a staple in Indian cooking."
            },
            {
                id: 11,
                name: "Organic Spices Pack",
                price: 300,
                image: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQKqBksnUXLz4UZxpdF7QFLJmq-uKTzymIdYg&s",
                description: "Assorted organic spices including cumin, coriander, and cardamom."
            },
            {
                id: 12,
                name: "Organic Cow Ghee",
                price: 500,
                image: "https://images.unsplash.com/photo-1567620905732-2d1ec7ab7445?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80",
                description: "Clarified butter made from organic cow's milk, traditional bilona method."
            }
        ];

        // Generate product cards
        function renderProducts() {
            const productsGrid = document.querySelector('.products-grid');
            productsGrid.innerHTML = products.map(product => `
                <div class="product-card">
                    <img src="${product.image}" alt="${product.name}">
                    <div class="product-info">
                        <h3 class="product-title">${product.name}</h3>
                        <p>${product.description}</p>
                        <p class="price">₹${product.price} / ${product.name.includes('Oil') ? 'liter' : product.name.includes('Honey') || product.name.includes('Ghee') ? '500g' : product.name.includes('Spices') ? 'set' : 'kg'}</p>
                        <div class="quantity-controls">
                            <button class="quantity-btn" onclick="adjustQuantity(${product.id}, -1)">-</button>
                            <span class="quantity" id="quantity-${product.id}">1</span>
                            <button class="quantity-btn" onclick="adjustQuantity(${product.id}, 1)">+</button>
                        </div>
                        <button class="add-to-cart" onclick="addToCart(${product.id})">Add to Cart</button>
                    </div>
                </div>
            `).join('');
        }

        // Cart functionality
        let cart = JSON.parse(localStorage.getItem('cart')) || [];
        let quantities = JSON.parse(localStorage.getItem('quantities')) || {};
        let isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
        let currentUser = JSON.parse(localStorage.getItem('currentUser')) || null;
        let orders = JSON.parse(localStorage.getItem('orders')) || [];

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            renderProducts();
            updateCart();
            updateUserStatus();
            
            // Set default quantities
            products.forEach(product => {
                if (!quantities[product.id]) {
                    quantities[product.id] = 1;
                }
                document.getElementById(`quantity-${product.id}`).textContent = quantities[product.id];
            });
            
            // Event listeners
            document.getElementById('user-icon').addEventListener('click', function() {
                if (isLoggedIn) {
                    showAlert(`Logged in as ${currentUser.name}`);
                } else {
                    openAuthModal();
                }
            });
            
            document.getElementById('track-order-link').addEventListener('click', function(e) {
                e.preventDefault();
                showOrderTrackingSection();
            });
            
            document.getElementById('footer-track-order').addEventListener('click', function(e) {
                e.preventDefault();
                showOrderTrackingSection();
            });
            
            document.getElementById('checkout-btn').addEventListener('click', function() {
                if (cart.length === 0) {
                    showAlert('Your cart is empty!');
                    return;
                }
                
                if (!isLoggedIn) {
                    showAlert('Please login to proceed to checkout');
                    openAuthModal();
                    return;
                }
                
                openCheckoutModal();
            });
            
            // Form submissions
            document.getElementById('login-form').addEventListener('submit', function(e) {
                e.preventDefault();
                loginUser();
            });
            
            document.getElementById('register-form').addEventListener('submit', function(e) {
                e.preventDefault();
                registerUser();
            });
            
            document.getElementById('contact-form').addEventListener('submit', function(e) {
                e.preventDefault();
                showAlert('Thank you for your message! We will get back to you soon.');
                document.getElementById('contact-form').reset();
            });
        });

        // Adjust quantity
        function adjustQuantity(productId, change) {
            quantities[productId] += change;
            if (quantities[productId] < 1) quantities[productId] = 1;
            document.getElementById(`quantity-${productId}`).textContent = quantities[productId];
            localStorage.setItem('quantities', JSON.stringify(quantities));
        }

        // Update cart display
        function updateCart() {
            const count = cart.reduce((total, item) => total + item.quantity, 0);
            document.querySelectorAll('.cart-count').forEach(el => el.textContent = count);
            
            const cartItems = document.getElementById('cart-items');
            const subtotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            const shipping = subtotal > 500 ? 0 : 50;
            const total = subtotal + shipping;
            
            if (cart.length === 0) {
                cartItems.innerHTML = '<p style="text-align: center;">Your cart is empty</p>';
            } else {
                cartItems.innerHTML = cart.map(item => {
                    const product = products.find(p => p.id === item.id);
                    return `
                        <div class="cart-item">
                            <img src="${product.image}" alt="${product.name}">
                            <div class="cart-item-details">
                                <h4 class="cart-item-title">${product.name}</h4>
                                <p class="cart-item-price">₹${product.price} × ${item.quantity} = ₹${product.price * item.quantity}</p>
                            </div>
                            <button class="cart-item-remove" onclick="removeFromCart(${item.id})"><i class="fas fa-trash"></i></button>
                        </div>
                    `;
                }).join('');
            }
            
            document.getElementById('cart-subtotal').textContent = `₹${subtotal}`;
            document.getElementById('cart-shipping').textContent = `₹${shipping}`;
            document.getElementById('cart-total').textContent = `₹${total}`;
            localStorage.setItem('cart', JSON.stringify(cart));
            
            // Update checkout modal if open
            if (document.getElementById('checkout-modal').classList.contains('active')) {
                updateCheckoutModal();
            }
        }
        
        // Update checkout modal
        function updateCheckoutModal() {
            const subtotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            const shipping = subtotal > 500 ? 0 : 50;
            const total = subtotal + shipping;
            
            document.getElementById('checkout-subtotal').textContent = `₹${subtotal}`;
            document.getElementById('checkout-shipping').textContent = `₹${shipping}`;
            document.getElementById('checkout-total').textContent = `₹${total}`;
            
            const checkoutItems = document.getElementById('checkout-items');
            checkoutItems.innerHTML = cart.map(item => {
                const product = products.find(p => p.id === item.id);
                return `
                    <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                        <span>${product.name} × ${item.quantity}</span>
                        <span>₹${product.price * item.quantity}</span>
                    </div>
                `;
            }).join('');
            
            // Pre-fill user details if logged in
            if (isLoggedIn && currentUser) {
                document.getElementById('checkout-name').value = currentUser.name;
                document.getElementById('checkout-email').value = currentUser.email;
                document.getElementById('checkout-phone').value = currentUser.phone;
            }
        }
        
        // Add to cart
        function addToCart(productId) {
            const quantity = quantities[productId] || 1;
            const existingItem = cart.find(item => item.id === productId);
            
            if (existingItem) {
                existingItem.quantity += quantity;
            } else {
                cart.push({ id: productId, quantity: quantity });
            }
            
            // Reset quantity
            quantities[productId] = 1;
            document.getElementById(`quantity-${productId}`).textContent = 1;
            
            updateCart();
            showAlert('Item added to cart!');
            openCart();
        }
        
        // Remove from cart
        function removeFromCart(productId) {
            cart = cart.filter(item => item.id !== productId);
            updateCart();
            showAlert('Item removed from cart');
        }
        
        // Cart popup
        function openCart() {
            document.getElementById('cart-popup').classList.add('active');
        }
        
        function closeCart() {
            document.getElementById('cart-popup').classList.remove('active');
        }
        
        // Auth modal
        function openAuthModal() {
            document.getElementById('auth-modal').classList.add('active');
        }
        
        function closeAuthModal() {
            document.getElementById('auth-modal').classList.remove('active');
        }
        
        function switchAuthTab(tab) {
            document.getElementById('login-tab').classList.remove('active');
            document.getElementById('register-tab').classList.remove('active');
            document.getElementById('login-form').classList.remove('active');
            document.getElementById('register-form').classList.remove('active');
            
            document.getElementById(`${tab}-tab`).classList.add('active');
            document.getElementById(`${tab}-form`).classList.add('active');
        }
        
        // User authentication
        function loginUser() {
            const email = document.getElementById('login-email').value;
            const password = document.getElementById('login-password').value;
            
            // In a real app, this would be a server call
            const users = JSON.parse(localStorage.getItem('users')) || [];
            const user = users.find(u => u.email === email && u.password === password);
            
            if (user) {
                isLoggedIn = true;
                currentUser = user;
                localStorage.setItem('isLoggedIn', 'true');
                localStorage.setItem('currentUser', JSON.stringify(user));
                
                closeAuthModal();
                showAlert(`Welcome back, ${user.name}!`);
                updateUserStatus();
            } else {
                showAlert('Invalid email or password');
            }
        }
        
        function registerUser() {
            const name = document.getElementById('register-name').value;
            const email = document.getElementById('register-email').value;
            const password = document.getElementById('register-password').value;
            const phone = document.getElementById('register-phone').value;
            
            // Simple validation
            if (!name || !email || !password || !phone) {
                showAlert('Please fill all fields');
                return;
            }
            
            // In a real app, this would be a server call
            const users = JSON.parse(localStorage.getItem('users')) || [];
            
            // Check if user already exists
            if (users.some(u => u.email === email)) {
                showAlert('Email already registered');
                return;
            }
            
            const newUser = { name, email, password, phone };
            users.push(newUser);
            localStorage.setItem('users', JSON.stringify(users));
            
            isLoggedIn = true;
            currentUser = newUser;
            localStorage.setItem('isLoggedIn', 'true');
            localStorage.setItem('currentUser', JSON.stringify(newUser));
            
            closeAuthModal();
            showAlert(`Welcome to PureOrganic, ${name}!`);
            updateUserStatus();
        }
        
        function updateUserStatus() {
            const userNotification = document.getElementById('user-notification');
            if (isLoggedIn) {
                userNotification.style.display = 'none';
                document.querySelector('.user-icon i').className = 'fas fa-user-check';
            } else {
                userNotification.style.display = 'flex';
                document.querySelector('.user-icon i').className = 'fas fa-user';
            }
        }
        
        // Checkout modal
        function openCheckoutModal() {
            updateCheckoutModal();
            document.getElementById('checkout-modal').classList.add('active');
        }
        
        function closeCheckoutModal() {
            document.getElementById('checkout-modal').classList.remove('active');
        }
        
        // Place order
        function placeOrder() {
            // Validate form
            const name = document.getElementById('checkout-name').value;
            const email = document.getElementById('checkout-email').value;
            const phone = document.getElementById('checkout-phone').value;
            const address = document.getElementById('checkout-address').value;
            const city = document.getElementById('checkout-city').value;
            const pincode = document.getElementById('checkout-pincode').value;
            const state = document.getElementById('checkout-state').value;
            
            if (!name || !email || !phone || !address || !city || !pincode || !state) {
                showAlert('Please fill all shipping details');
                return;
            }
            
            // Create order
            const subtotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            const shipping = subtotal > 500 ? 0 : 50;
            const total = subtotal + shipping;
            
            const orderId = 'PO' + Math.floor(10000 + Math.random() * 90000);
            const orderDate = new Date().toISOString();
            
            const order = {
                id: orderId,
                date: orderDate,
                customer: {
                    name,
                    email,
                    phone,
                    address: `${address}, ${city}, ${state} - ${pincode}`
                },
                items: cart.map(item => {
                    const product = products.find(p => p.id === item.id);
                    return {
                        id: product.id,
                        name: product.name,
                        price: product.price,
                        quantity: item.quantity,
                        image: product.image
                    };
                }),
                subtotal,
                shipping,
                total,
                status: 'processing' // processing, shipped, delivered
            };
            
            // Save order
            orders.push(order);
            localStorage.setItem('orders', JSON.stringify(orders));
            
            // Clear cart
            cart = [];
            localStorage.setItem('cart', JSON.stringify(cart));
            updateCart();
            
            // Close modals and show confirmation
            closeCheckoutModal();
            closeCart();
            
            // Show order confirmation
            document.getElementById('order-id-display').textContent = orderId;
            document.getElementById('order-confirmation-modal').classList.add('active');
        }
        
        function closeOrderConfirmation() {
            document.getElementById('order-confirmation-modal').classList.remove('active');
        }
        
        // Order tracking
        function showOrderTrackingSection() {
            document.getElementById('order-tracking-section').style.display = 'block';
            window.location.href = '#order-tracking-section';
        }
        
        function trackOrder() {
            const orderId = document.getElementById('order-id').value.trim();
            const order = orders.find(o => o.id === orderId);
            
            const orderTracking = document.getElementById('order-tracking');
            
            if (!order) {
                orderTracking.innerHTML = '<p style="text-align: center; color: #ff4444;">Order not found. Please check your order ID.</p>';
                orderTracking.classList.add('active');
                return;
            }
            
            // Determine status progress
            let statusProgress = '33%';
            if (order.status === 'shipped') statusProgress = '66%';
            if (order.status === 'delivered') statusProgress = '100%';
            
            orderTracking.innerHTML = `
                <div>
                    <h4>Order #${order.id}</h4>
                    <p>Placed on ${new Date(order.date).toLocaleDateString()}</p>
                    
                    <div class="order-status">
                        <div class="status-step">
                            <div class="status-icon ${order.status === 'processing' || order.status === 'shipped' || order.status === 'delivered' ? 'active' : ''}">
                                <i class="fas fa-shopping-bag"></i>
                            </div>
                            <span>Processing</span>
                        </div>
                        <div class="status-step">
                            <div class="status-icon ${order.status === 'shipped' || order.status === 'delivered' ? 'active' : ''}">
                                <i class="fas fa-truck"></i>
                            </div>
                            <span>Shipped</span>
                        </div>
                        <div class="status-step">
                            <div class="status-icon ${order.status === 'delivered' ? 'active' : ''}">
                                <i class="fas fa-home"></i>
                            </div>
                            <span>Delivered</span>
                        </div>
                        <div class="status-line"></div>
                        <div class="status-line-progress" style="width: ${statusProgress}"></div>
                    </div>
                    
                    <div class="order-details">
                        <h4>Order Details</h4>
                        <div style="display: flex; justify-content: space-between; margin-top: 15px;">
                            <div>
                                <h5>Shipping Address</h5>
                                <p>${order.customer.name}</p>
                                <p>${order.customer.address}</p>
                                <p>${order.customer.phone}</p>
                            </div>
                            <div>
                                <h5>Order Summary</h5>
                                <p>Subtotal: ₹${order.subtotal}</p>
                                <p>Shipping: ₹${order.shipping}</p>
                                <p>Total: ₹${order.total}</p>
                            </div>
                        </div>
                        
                        <div class="order-products">
                            <h5>Products</h5>
                            ${order.items.map(item => `
                                <div style="display: flex; align-items: center; margin: 10px 0; padding-bottom: 10px; border-bottom: 1px solid #eee;">
                                    <img src="${item.image}" alt="${item.name}" style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px;">
                                    <div style="flex: 1;">
                                        <p>${item.name}</p>
                                        <p>${item.quantity} × ₹${item.price}</p>
                                    </div>
                                    <p>₹${item.price * item.quantity}</p>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                </div>
            `;
            
            orderTracking.classList.add('active');
        }
        
        // Alert notification
        function showAlert(message) {
            const alert = document.createElement('div');
            alert.style.position = 'fixed';
            alert.style.bottom = '20px';
            alert.style.left = '50%';
            alert.style.transform = 'translateX(-50%)';
            alert.style.backgroundColor = '#4a8f29';
            alert.style.color = 'white';
            alert.style.padding = '10px 20px';
            alert.style.borderRadius = '5px';
            alert.style.boxShadow = '0 2px 10px rgba(0,0,0,0.2)';
            alert.style.zIndex = '1000';
            alert.style.animation = 'fadeIn 0.3s';
            alert.textContent = message;
            document.body.appendChild(alert);
            
            setTimeout(() => {
                alert.style.animation = 'fadeOut 0.3s';
                setTimeout(() => alert.remove(), 300);
            }, 3000);
        }
        
        // Mobile menu
        document.getElementById('mobile-menu-btn').addEventListener('click', function() {
            document.getElementById('nav-links').classList.toggle('active');
        });
    </script>
