    </div>

    <!-- Order Confirmation Modal -->
    <div class="auth-modal" id="order-confirmation-modal">
        <div class="auth-content" style="text-align: center;">
            <div style="font-size: 3rem; color: var(--green); margin-bottom: 20px;">
                <i class="fas fa-check-circle"></i>
            </div>
            <h3 style="margin-bottom: 15px;">Order Placed Successfully!</h3>
            <p style="margin-bottom: 20px;">Thank you for your purchase. Your order ID is <strong id="order-id-display">PO12345</strong>.</p>
            <p style="margin-bottom: 30px;">We've sent a confirmation email with your order details.</p>
            <button class="btn" onclick="closeOrderConfirmation()">Continue Shopping</button>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <script>
        // Product Data
        const products = [
            {
                id: 1,
