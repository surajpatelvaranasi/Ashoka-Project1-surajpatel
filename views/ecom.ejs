        .cart-item-price { font-size: 0.9rem; color: var(--green); }
        .cart-item-remove { background: none; border: none; color: #ff4444; cursor: pointer; align-self: flex-start; }
        .cart-summary { border-top: 1px solid var(--light-gray); padding-top: 15px; margin-top: 15px; }
        .cart-summary-row { display: flex; justify-content: space-between; margin-bottom: 10px; }
        .checkout-btn { width: 100%; margin-top: 10px; }
        
        /* Auth Modal */
        .auth-modal { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); 
